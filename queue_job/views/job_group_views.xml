<openerp>
    <data>

        <record id="view_queue_job_group_form" model="ir.ui.view">
            <field name="name">queue.job.group.form</field>
            <field name="model">queue.job.group</field>
            <field name="arch" type="xml">
                <form string="Job Group">
                    <header>
                        <button string="Retry jobs"
                            name="retry_jobs"
                            type="object"
                            class="oe_highlight"/>
                        <button string="Cancel jobs"
                            name="cancel_jobs"
                            type="object"/>
                        <button string="Reload"
                            name="reload_group"
                            type="object"/>
                        <field name="state"
                            widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(action_queue_job_2)d" context="{
                                'search_default_group': active_id,
                                'search_default_pending': 1,
                                'search_default_enqueued': 1,
                                'search_default_started': 1}"
                            icon="fa-cogs">
                                <field string="In progress" name="jobs_in_progress_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(action_queue_job_2)d" context="{
                                'search_default_group': active_id,
                                'search_default_done': 1}"
                            icon="fa-thumbs-up">
                                <field string="Jobs done" name="jobs_done_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(action_queue_job_2)d" context="{
                                'search_default_group': active_id,
                                'search_default_failed': 1}"
                            icon="fa-times-circle">
                                <field string="Jobs failed" name="jobs_failed_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <label for="progress"/>
                                <field name="progress" widget="progressbar" nolabel="1"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_queue_job_group_tree" model="ir.ui.view">
            <field name="name">queue.job.group.tree</field>
            <field name="model">queue.job.group</field>
            <field name="arch" type="xml">
                <tree string="Job Group" create="false" delete="false" colors="grey:state=='done';blue:state=='in_progress';red:state in ['failed', 'done_with_fails']">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="jobs_in_progress_count"/>
                    <field name="jobs_done_count"/>
                    <field name="jobs_failed_count"/>
                    <field name="progress" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <record id="view_queue_job_group_search" model="ir.ui.view">
            <field name="name">queue.job.group.search</field>
            <field name="model">queue.job.group</field>
            <field name="arch" type="xml">
                <search string="Job Group">
                    <field name="name"/>
                    <field name="state"/>
                </search>
            </field>
        </record>

        <record id="action_queue_job_group" model="ir.actions.act_window">
            <field name="name">Job Groups</field>
            <field name="res_model">queue.job.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_id" ref="view_queue_job_group_tree"/>
        </record>

        <menuitem id="menu_queue_job_group"
            name="Job Groups"
            action="action_queue_job_group"
            parent="menu_queue"
            sequence="5"/>

    </data>
</openerp>